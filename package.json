{
  "name": "react-colorizer",
  "version": "0.1.4",
  "description": "Library for generation of harmonious color themes.",
  "keywords": [
    "react",
    "colorizer",
    "color",
    "harmony",
    "generator"
  ],
  "author": {
    "name": "Ross Khanas",
    "email": "rk@try.cards"
  },
  "scripts": {
    "storybook-web-build": "cd ./storybooks/web && npm run build-storybook",
    "storybook-web": "cd ./storybooks/web && npm run storybook",
    "storybook-native-watch": "babel ./src --out-dir=./storybooks/native/lib --watch",
    "storybook-native": "cd ./storybooks/native && npm run storybook",
    "storybook-emulator-ios": "cd ./storybooks/native && react-native run-ios",
    "clean": "rimraf lib",
    "lint": "eslint src",
    "test": "mocha --recursive --compilers js:babel-core/register",
    "build": "npm run lint && npm test && npm run clean && babel src --out-dir lib",
    "release": "npm run build && npm run storybook-web-build"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:opensource-cards/react-colorizer.git"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "dependencies": {
    "tinycolor2": "^1.4.1"
  },
  "peerDependencies": {
    "react": "~15.3.2",
    "react-native": "^0.39.0",
    "styled-components": "^1.1.2"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.23.0",
    "chai": "^3.5.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "jsdom": "^9.11.0",
    "jsdom-global": "^2.1.0",
    "mocha": "^3.1.0",
    "react": "~15.3.2",
    "react-addons-test-utils": "~15.3.2",
    "react-dom": "~15.3.2",
    "rimraf": "^2.6.0",
    "styled-components": "^1.4.3"
  }
}
